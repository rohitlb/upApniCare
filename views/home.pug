                    input#notifyEmail(type="email" placeholder="Email Address" style="border-radius: 35px; background-color: white;").emailBox
            div.row.center-align
                a.btn-floating.btn-large.red.submitButton
                    i.material-icons send

            div.row
                div.circlebg
                    span.launchtimer#launchDay
                    br
                    | Days
                div.circlebg
                    span.launchtimer#launchHour
